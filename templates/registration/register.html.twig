{% extends 'base.html.twig' %}

{% block title %}La Nîmes'alerie : Inscription{% endblock %}

{% block body %}
<header>
    {{ include('_header.html.twig') }}
</header>
<div class="sections">
    <div class="col-lg-6 mx-auto my-4 py-2">
    <h2 class="text-center mt-2">Nouveau client de La Nîmes'alerie ? Créez votre compte !</h2>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-outline-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
<footer>
    {{ include('includes/footer.php') }}
</footer>
{% endblock %}
