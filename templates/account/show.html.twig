{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ account.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ account.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ account.address }}</td>
            </tr>
            <tr>
                <th>Zip_code</th>
                <td>{{ account.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ account.city }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ account.birthDate ? account.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('account_index') }}">back to list</a>

    <a href="{{ path('account_edit', {'id': account.id}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
