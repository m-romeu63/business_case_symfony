{% extends 'base.html.twig' %}

{% block title %}La Nîmes'alerie : Mon compte
{% endblock %}

{% block body %}
	<header>
		{{ include('_header.html.twig') }}
	</header>
	<section class="sections my-4">
		<h2 class="text-center mt-2">Mon compte</h2>
		<div class="row p-4">
			<div class="col mx-auto p-4">
				<h3 class="mb-2">Mon identité</h3>
				<hr>
				<p>Mon nom :
					{{ account.lastname }}</p>
				<p>Mon prénom :
					{{ account.firstname }}</p>
				<p>Ma date de naissance :
					{{ account.birthdate ? account.birthDate|date('d/m/Y') : '' }}</p>
			</div>
			<div class="col mx-auto p-4">
				<h3 class="mb-2">Mon adresse</h3>
				<hr>
				<p>{{ account.address }}</p>
				<p>{{ account.zipcode }}</p>
				<p>{{ account.city }}</p>
			</div>
			{% if is_granted("ROLE_ADMIN") %}
				<a href="{{ path('account_index') }}">back to list</a>
			{% endif %}
			<a href="{{ path('account_edit', {'id': account.id}) }}" class="my-3"><i class="bi bi-pen"></i> Modifier mon compte</a>

			{{ include('account/_delete_form.html.twig') }}
		</div>
	</section>
	<footer>
		{{ include('includes/footer.php')}}
	</footer>
{% endblock %}
